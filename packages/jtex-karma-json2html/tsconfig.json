{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["ES5", "ES6", "ESNext"],
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "elements.createElement",
        "declaration": true,
        "declarationDir": "./lib",
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": ["src"]
}
