{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "declarationDir": "./lib",
        "outDir": "./lib",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["./src"]
}
