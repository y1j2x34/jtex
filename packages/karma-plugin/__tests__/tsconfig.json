{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es5", "es6", "esnext"],
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": ["jest", "node"]
    },
    "include": ["./"]
}
